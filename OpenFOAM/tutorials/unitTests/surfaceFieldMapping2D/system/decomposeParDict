FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 2;

//method          clustered; //scotch;
method            scotch;


clusteredCoeffs
{
    numberOfSubdomains 2;

    method hierarchical;

    hierarchicalCoeffs
    {
        n       ( 2 1 1 );
        delta   0.001;
        order   xyz;
    }
}


constraints
{
refinementHistory
    {
        //- Decompose cells such that all cell originating from single cell
        //  end up on same processor
        type    refinementHistory;
    }
}
