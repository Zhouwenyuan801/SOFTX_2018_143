FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      balanceParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  3;

method              ptscotch;

constraints
{
    refinementHistory
    {
        //- Decompose cells such that all cell originating
        //  from single cell end up on same processor
        type    refinementHistory;
    }
}

